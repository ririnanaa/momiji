<div class="container">
  <div class="row">
    <h2 class="pl-3 pt-3" style="color: #3a5b52;">＜<%= @post.name %>＞のレビュー</h2>
    <div class="col-md-3">
      <div class="m-5">
        <%= link_to new_post_review_path(@post.id), class: "text-info" do %>
          <h5 class="text-info"><i class="fa-regular fa-comment"></i>レビューする</h5>
        <% end %> 
      </div>  
    </div>
    <div class="col-md-9 mx-auto">
      <%= render 'review', reviews: @reviews %>
      <div class="d-flex justify-content-center">
        <%= paginate @reviews, theme: 'bootstrap-5' %>
      </div>
      <div class="d-flex justify-content-end m-3">
        <%= link_to "展覧会詳細へ戻る", post_path(@post.id), class: "btn btn-outline-secondary" %>
      </div>

    </div>
  </div>
</div>
