<% if current_user && post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true, data: {"turbolinks" => false}, class: "text-dark"  do %>
    <i class="fas fa-heart fa-2x" aria-hidden="true" style="color: red;"></i>
    <%= post.likes.count %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true, data: {"turbolinks" => false}, class: "text-dark" do %>
    <i class="fa-regular fa-heart fa-2x" aria-hidden="true" style="color: gray"></i>
    <%= post.likes.count %>
  <% end %>
<% end %>
