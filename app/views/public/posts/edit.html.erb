<div class="container">
  <div class="row">
    <h2 class="pl-3 pt-3" style="color: #3a5b52;">展覧会情報編集</h2>
    <div class="col-md-6 col-sm-12 mx-2 mx-sm-auto">
      <%= render 'form', post: @post %>
      <div class="d-flex justify-content-end mb-4"><%= link_to "削除",  post_path(@post.id), class: "btn btn-outline-danger",  method: :delete, "data-confirm" => "本当に削除しますか？" %></div>
      <div class="d-flex justify-content-end mb-4"><%= link_to "詳細画面へ戻る", post_path(@post.id), class: "btn btn-outline-secondary" %></div>
    </div>
  </div>
</div>
