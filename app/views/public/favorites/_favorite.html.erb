<% if current_user && review.favorited_by?(current_user) %>
  <%= link_to review_favorite_path(review), method: :delete, remote: true, data: {"turbolinks" => false} do %>
    <i class="fa-solid fa-thumbs-up fa-lg" aria-hidden="true"></i>
    <%= review.favorites.count %>
  <% end %>
<% else %>
  <%= link_to review_favorite_path(review), method: :post, remote: true, data: {"turbolinks" => false} do %>
    <i class="fa-regular fa-thumbs-up fa-lg" aria-hidden="true"></i>
    <%= review.favorites.count %>
  <% end %>
<% end %>
