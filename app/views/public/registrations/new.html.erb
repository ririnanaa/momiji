<div class="container">
  <div class="row no-gutters">
    <h2 class="pl-3 pt-3" style="color: #3a5b52;">新規登録</h2>
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto">
      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="mb-3">
          <%= f.label :"ユーザー名" %>
          <p class="text-secondary">(半角英字のみ)</p>
          <%= f.text_field :name %>
        </div>
        <div class="mb-3">
          <%= f.label :"メールアドレス" %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="mb-3">
          <%= f.label :"会員タイプ選択" %><br>
          <p class="text-secondary">(開催者を選択された場合、レビューの投稿は行えません。)</p>
          <%= f.radio_button :is_general, true %>
          <%= f.label :is_general_true, "一般会員" %>
          <%= f.radio_button :is_general, false %>
          <%= f.label :is_general_false, "開催者会員" %>
        </div>
        <div class="m-3">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="m-3">
          <%= f.label :"パスワード（確認用）" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="d-flex justify-content-end m-3">
          <%= f.submit "新規登録", class: "btn btn-outline-success" %>
        </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-end p-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
