<h1>投稿詳細</h1>

<div> 
  <%= image_tag @post.post_image, size:'350x300' %>
  <h5>展覧会名</h5>
  <%= @post.name %> 
  <h5>開催日時</h5>
  <%= @post.daytime %>
  <h5>会場名</h5>
  <%= @post.place %>
  <h5>会場住所</h5>
  <%= @post.address %>
  <h5>説明</h5>
  <%= @post.body %>
  <h5>ジャンル</h5>
  <% @post.genres.each do |genre| %>
    <%= genre.name %>
  <% end %>
  <h5>カテゴリー</h5>
  <% @post.categories.each do |category| %>
    <%= category.name %>
  <% end %> 
  <h5>投稿者</h5>
  <%= link_to admin_user_path(@post.user.id) do %>
    <%= @post.user.name %>
  <% end %>  
  <% if @post.user.is_general %>
    <p>一般</p>
  <% else %>  
    <p>開催者</p>
  <% end %>  
 

<%= link_to "削除",  admin_post_path(@post.id),  method: :delete, "data-confirm" => "本当に削除しますか？" %>
