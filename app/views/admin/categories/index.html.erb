<div class="container">
  <div class="row">
    <h2 class="pl-3 pt-3" style="color: #3a5b52;">カテゴリー作成・一覧</h2>
    <div class="col-md-6 col-sm-12 mx-2 mx-sm-auto">
      
      <% if @category.errors.any? %>
        <%= @category.errors.count %>件のエラーが発生しました
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <!--カテゴリー新規登録 -->
      <%= form_with model: @category, url: admin_categories_path, method: :post, local:true do |f| %>
        <div class="d-flex">
          <div class="m-2"><%= f.text_field :name, placeholder: "絵画" %></div>
          <div class="m-2"><%= f.submit '登録', class: "btn btn-outline-success btn-lg" %></div>
        </div>
      <% end %>

      <!--カテゴリー　一覧 -->
      <h6 class="pt-4" style="color: #3a5b52;">カテゴリー一覧</h6>
      <% @categories.each do |category| %>
        <div class="d-flex">
          <div class="m-2"><%= category.name %></div>
          <div class="m-2"><%= link_to '編集', edit_admin_category_path(category.id), class: "btn btn-outline-primary" %></div>
          <div class="m-2"><%= link_to '削除', admin_category_path(category.id), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除しますか？"  %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
